{
  "root": true,
  "extends": ["react-app", "plugin:prettier/recommended"],
  "plugins": ["prettier", "react", "jsx-a11y", "jest"],
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "jquery": false,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "semi": true,
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  }
}
